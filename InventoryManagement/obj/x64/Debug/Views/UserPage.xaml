    <Grid Margin="-2,0,2,-47"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Button x:ConnectionId='2' x:Name="ButtonAdd" Background="CadetBlue" FontWeight="Bold" Content="ADD" Margin="44,497,0,0" VerticalAlignment="Top" Height="37" Width="74"                          HorizontalAlignment="Left"/>
        <GridView x:ConnectionId='3' x:Name="dataGrid1"  
                BorderBrush="#FF7A7A7A" BorderThickness="1"
                  IsItemClickEnabled="True" 
                                                
                  ScrollViewer.HorizontalScrollMode="Auto" ScrollViewer.VerticalScrollMode="Auto"
                   Margin="488,99,74,159" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

            <GridView.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Id}" Grid.Column="0"/>
                    <TextBlock Text="{Binding Name}" Grid.Column="1"/>
                    <TextBlock Text="{Binding UserName}" Grid.Column="2"/>
                    <TextBlock Text="{Binding Email}" Grid.Column="3"/>
                    <TextBlock Text="{Binding Password}" Grid.Column="4"/>
                    <TextBlock Text="{Binding Phone}" Grid.Column="5"/>
                </Grid>
            </GridView.Header>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid Orientation="Vertical"
                             ScrollViewer.VerticalScrollMode="Enabled" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid BorderBrush="#FF7A7A7A" Height="35" BorderThickness="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="190"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="190"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{Binding Id}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Name}"/>
                        <TextBlock Grid.Column="2" Text="{Binding Email}"/>
                        <TextBlock Grid.Column="3" Text="{Binding UserName}"/>
                        <TextBlock Grid.Column="4" Text="{Binding Password}"/>
                        <TextBlock Grid.Column="5" Text="{Binding Phone}"/>

                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <TextBlock x:ConnectionId='4' x:Name="ErrorMessage" Foreground="Red" HorizontalAlignment="Left" Margin="109,463,0,0" Text="*" TextWrapping="Wrap" VerticalAlignment="Top" Height="17" Width="206"/>
        <TextBox x:ConnectionId='5' IsReadOnly="True" x:Name="AdminId" HorizontalAlignment="Left" Margin="109,152,0,0" Text="" VerticalAlignment="Top" Width="110"/>
        <TextBlock FontWeight="Bold" HorizontalAlignment="Left" Margin="25,159,0,0" Text="ID" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="26"/>
        <TextBlock FontWeight="Bold" HorizontalAlignment="Left" Margin="25,210,0,0" Text="Name" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock FontWeight="Bold" HorizontalAlignment="Left" Margin="25,267,0,0" Text="Email" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='6' x:Name="AdminName" HorizontalAlignment="Left" Margin="108,203,0,0" Text="" VerticalAlignment="Top" Width="195"/>
        <TextBox x:ConnectionId='7' x:Name="AdminEmail" HorizontalAlignment="Left" Margin="108,260,0,0" Text="" VerticalAlignment="Top" Width="199"/>
        <TextBox x:ConnectionId='8' x:Name="AdminUsername" HorizontalAlignment="Left" Margin="107,306,0,0" Text="" VerticalAlignment="Top" Width="199"/>
        <TextBox x:ConnectionId='9' x:Name="Adminpassword" HorizontalAlignment="Left" Margin="107,361,0,0" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBox x:ConnectionId='10' x:Name="AdminPhone" HorizontalAlignment="Left" Margin="107,408,0,0" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBlock FontWeight="Bold" HorizontalAlignment="Left" Margin="25,313,0,0" Text="Username" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock FontWeight="Bold" HorizontalAlignment="Left" Margin="25,368,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock FontWeight="Bold" HorizontalAlignment="Left" Margin="25,415,0,0" Text="Phone" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:ConnectionId='11' x:Name="ButonUpdate" Background="BurlyWood"                            FontWeight="Bold" Content="UPDATE" HorizontalAlignment="Left" Margin="148,498,0,0" VerticalAlignment="Top" Height="36" Width="83"/>
        <Button x:ConnectionId='12' x:Name="Btndel"                      Background="Chocolate" FontWeight="Bold"  Content="DELETE" HorizontalAlignment="Left" Margin="263,500,0,0" VerticalAlignment="Top"/>
        <Button x:ConnectionId='13' FontWeight="Bold"                      Background="BlueViolet" Content="CANCEL" HorizontalAlignment="Left" Margin="364,502,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>

