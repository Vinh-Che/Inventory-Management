        <TextBox x:ConnectionId='8' x:Name="AdminPhone" HorizontalAlignment="Left" Margin="232,468,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="382" Height="50"/>
        <TextBlock FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" Margin="55,484,0,0" Text="Phone" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <PasswordBox x:ConnectionId='9' x:Name="Adminpassword" HorizontalAlignment="Left" Margin="232,379,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.062,0.891" Width="382"/>

