    x:Class="InventoryManagement.AddProduct"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid ScrollViewer.VerticalScrollMode="Auto">
        <TextBox x:ConnectionId='2' x:Name="AdminName" HorizontalAlignment="Left" Margin="232,102,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="382" FontSize="20"/>
