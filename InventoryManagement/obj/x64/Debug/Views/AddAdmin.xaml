        <TextBlock HorizontalAlignment="Left" FontWeight="Bold" FontSize="20" Margin="48,102,0,0" Text="Name" TextWrapping="Wrap" VerticalAlignment="Top" Height="43" Width="100" RenderTransformOrigin="0.525,1.341"/>
        <TextBlock HorizontalAlignment="Left" FontWeight="Bold" FontSize="20" Margin="48,193,0,0" Text="Email" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" Width="85" RenderTransformOrigin="0.525,1.341"/>
