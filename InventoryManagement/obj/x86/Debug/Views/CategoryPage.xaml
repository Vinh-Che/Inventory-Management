<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InventoryManagement"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Custom="using:Microsoft.UI.Xaml.Controls"
    x:Class="InventoryManagement.CategoryPage"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="1436">
    <Grid>
        <TextBlock FontSize="15" FontWeight="Bold" HorizontalAlignment="Left" Margin="22,120,0,0" Text="Name" TextWrapping="Wrap" VerticalAlignment="Top" Height="19" Width="47"/>
        <TextBox x:ConnectionId='2' x:Name="Name" FontSize="15" HorizontalAlignment="Left" Margin="80,116,0,0" Text="" VerticalAlignment="Top" Height="24" Width="165"/>
        <Button x:ConnectionId='3'  x:Name="ButtonAdd" Background="LightBlue"                         FontSize="12" FontWeight="Bold" Content="ADD" HorizontalAlignment="Left" Margin="16,195,0,0" VerticalAlignment="Top" Height="31" Width="54"/>
        <Button x:ConnectionId='4' x:Name="ButtonUpdate"                            Background="YellowGreen" FontSize="12" FontWeight="Bold" Content="UPDATE" HorizontalAlignment="Left" Margin="88,193,0,0" VerticalAlignment="Top" Height="31" Width="66"/>
        <Button x:ConnectionId='5' x:Name="ButnDlt"                       FontSize="12" Background="Brown" Foreground="Wheat" FontWeight="Bold" Content="DELETE" HorizontalAlignment="Left" Margin="174,191,0,0" VerticalAlignment="Top" Height="31" Width="65"/>
        <Button x:ConnectionId='6' Background="LightCoral" x:Name="ButtonClr"                         FontSize="12" FontWeight="Bold" Content="CANCEL" HorizontalAlignment="Left" Margin="257,192,0,0" VerticalAlignment="Top" Height="30" Width="69"/>
        <TextBlock x:ConnectionId='7' x:Name="ErrorMessage" Foreground="Red" HorizontalAlignment="Left" Margin="81,158,0,0" Text="*" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <GridView x:ConnectionId='8' x:Name="dataGrid1"  

                  BorderBrush="#FF7A7A7A" BorderThickness="1"
                  IsItemClickEnabled="True" 
                                                
                  ScrollViewer.HorizontalScrollMode="Auto" ScrollViewer.VerticalScrollMode="Auto"
                   Margin="372,61,791,256" >
            <GridView.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Id}" Grid.Column="0"/>
                    <TextBlock Text="{Binding Name}" Grid.Column="1"/>
                    
                </Grid>
            </GridView.Header>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid Orientation="Vertical"
                             ScrollViewer.VerticalScrollMode="Enabled" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid BorderBrush="#FF7A7A7A" Height="40" BorderThickness="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="180"/>

                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{Binding Id}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Name}"/>

                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <TextBox x:ConnectionId='9' IsReadOnly="True" x:Name="CategoryId" HorizontalAlignment="Left" Margin="80,65,0,0" Text="" VerticalAlignment="Top" Width="74"/>
        <TextBlock FontSize="15" FontWeight="Bold" HorizontalAlignment="Left" Margin="25,65,0,0" Text="Id" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <AppBarButton x:ConnectionId='10'                            FontWeight="Bold" FontSize="20"   HorizontalAlignment="Left" Icon="Send"  Label="Products" Margin="698,115,0,0" VerticalAlignment="Top" Height="52" Width="57" />
        <GridView x:ConnectionId='11' x:Name="dataGrid2"  

                BorderBrush="#FF7A7A7A" BorderThickness="1"
                  IsItemClickEnabled="True" 
                                                
                  Width="380"
                  ScrollViewer.HorizontalScrollMode="Auto" ScrollViewer.VerticalScrollMode="Auto"
                   Margin="867,54,189,256" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <GridView.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Id}" Grid.Column="0"/>
                    <TextBlock Text="{Binding Name}" Grid.Column="1"/>
                    <TextBlock Text="{Binding Name}" Grid.Column="2"/>
                </Grid>
            </GridView.Header>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid Orientation="Vertical"
                             ScrollViewer.VerticalScrollMode="Enabled" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid BorderBrush="#FF7A7A7A"  BorderThickness="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{Binding Name}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Price}"/>
                        <TextBlock Grid.Column="2" Text="{Binding Quantity}"/>

                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
      
        <TextBlock x:ConnectionId='12' x:Name="ErrorProducts" Foreground="Red" HorizontalAlignment="Left" Margin="680,188,0,0" Text="*" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock FontSize="15" FontWeight="Bold"  FontFamily="Gadugi"  HorizontalAlignment="Left" Margin="384,32,0,0" Text="ID" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock FontSize="15" FontWeight="Bold"  FontFamily="Gadugi" HorizontalAlignment="Left" Margin="447,32,0,0" Text="NAME" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" FontWeight="Bold" FontSize="15" Margin="878,30,0,0" Text="NAME" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" FontWeight="Bold" FontSize="15" Margin="1077,30,0,0" Text="PRICE" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" FontWeight="Bold" FontSize="15" Margin="1144,29,0,0" Text="QUANTITY" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Page>

